#!/usr/bin/env php
<?php

use MultiTester\MultiTester;

set_time_limit(-1);

//Check for autoload file
$cwd = getcwd();
$path = "$cwd/vendor/autoload.php";

if (file_exists($path)) {
    require $path;
} else {
    echo "Composer's autoload.php not found in $cwd.";
    exit(1);
}

exit((new MultiTester())->run($argv) ? 0 : 1);
